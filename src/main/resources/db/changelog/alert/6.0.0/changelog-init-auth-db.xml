    <!-- Create stored procedures/functions for auth initialization -->
    <changeSet author="gavink" id="2019-12-17-09-02-35-275">
        <createProcedure schemaName="ALERT" dbms="postgresql">
            CREATE OR REPLACE FUNCTION GET_ROLE_ID(varchar(64))
            RETURNS BIGINT
            AS $$
                DECLARE result BIGINT;
                BEGIN
                    select ID
                    into result
                    from ALERT.ROLES where ROLENAME = $1;
                RETURN result;
                END;
            $$
            LANGUAGE sql;
        </createProcedure>
        <createProcedure schemaName="ALERT" dbms="h2">
            CREATE ALIAS GET_ROLE_ID AS $$
                java.lang.Integer getRoleId(final java.sql.Connection connection, final java.lang.String roleName) throws java.sql.SQLException {
                    try (final java.sql.Statement statement = connection.createStatement()) {
                        final java.sql.ResultSet resultSet = statement.executeQuery("SELECT ID FROM ALERT.ROLES WHERE ROLES.ROLENAME = '" + roleName.toUpperCase() + "' LIMIT 1;");
                        if (resultSet.next()) {
                            return resultSet.getInt("ID");
                        } else {
                            throw new java.sql.SQLException("No values returned for that query");
                        }
                    }
                }
            $$;
        </createProcedure>

        <createProcedure schemaName="ALERT" dbms="postgresql">
            CREATE OR REPLACE FUNCTION GET_USER_ID(varchar(64))
            RETURNS BIGINT
            AS $$
                DECLARE result BIGINT;
                BEGIN
                    select ID
                    into result
                    from ALERT.USERS where USERNAME = $1;
                RETURN result;
                END;
            $$
            LANGUAGE sql;
        </createProcedure>
        <createProcedure schemaName="ALERT" dbms="h2">
            CREATE ALIAS GET_USER_ID AS $$
                java.lang.Integer getUserId(final java.sql.Connection connection, final java.lang.String username) throws java.sql.SQLException {
                    try (final java.sql.Statement statement = connection.createStatement()) {
                        final java.sql.ResultSet resultSet = statement.executeQuery("SELECT ID FROM ALERT.USERS WHERE USERS.USERNAME = '" + username + "' LIMIT 1;");
                        if (resultSet.next()) {
                            return resultSet.getInt("ID");
                        } else {
                            throw new java.sql.SQLException("No values returned for that query");
                        }
                    }
                }
            $$;
        </createProcedure>
    </changeSet>
